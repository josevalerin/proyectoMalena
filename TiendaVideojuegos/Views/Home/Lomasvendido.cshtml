@model IEnumerable<TiendaVideojuegos.Models.PRODUCTOS>
@{
    ViewBag.Title = "Videojuegos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8  Destacados-categorias">


    <div class="productos">
        <div class="col-12 centrar">
            <h2>Productos</h2>
        </div>
        <div class="col-12 centrar">
            <article class="col-4">
                <div class="Producto">
                    <img src="https://images.pexels.com/photos/8933053/pexels-photo-8933053.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="card-img-top" alt="...">
                    <div class="container Producto-info">
                        <div class="row text-center">
                            <div class="col" id="titulo"><a>Tacones</a></div>
                        </div>
                        <div class="row text-center">
                            <div class="col" id="precio">Precio: $200</div>
                        </div>
                    </div>
                </div>
            </article>
            <article class="col-4">
                <div class="Producto">
                    <img src="https://images.pexels.com/photos/6636775/pexels-photo-6636775.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="card-img-top" alt="...">
                    <div class="container Producto-info">
                        <div class="row text-center">
                            <div class="col" id="titulo"><a>Botas</a></div>
                        </div>
                        <div class="row text-center">
                            <div class="col" id="precio">Precio: $300</div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>

</div>

<div class="col-4 Descuentos">

    <div class="col-12 centrar">
        <h2>Descuentos</h2>
    </div>

    @foreach (var item in Model)
    {
        if (item.DESCUENTO > 0)
        {

            <article class="col-12 centrar">
                <div class="Producto Producto-descuento">
                    <img src="@item.IMAGEN_PRODUCTO" class="card-img-top" alt="...">
                    <div class="container Producto-info">
                        <div class="row text-center">
                            <div class="col" id="titulo"><a>@Html.ActionLink(item.NOMBRE_PRODUCTO, "Details", new { id = item.ID_PRODUCTO })</a></div>
                        </div>
                        <div class="row text-center">
                            <div class="col" id="precio">$@item.PRECIO</div>
                        </div>
                    </div>
                </div>
            </article>

        }


    }

</div>

