            <br>
        </div>

        <div class="row form-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col">
                <button class="btn btn-info">
                    @Html.ActionLink("Retornar", "Index")
                </button> |
                <input type="submit" value="Borrar usuario" class="btn btn-danger" />
            </div>
            }
        </div>
    </div>
