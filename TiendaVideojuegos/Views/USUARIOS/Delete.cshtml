            </DIV>
            <br>

            <DIV style="border-bottom: ridge; border-width: medium; ">

                <dt>
                    Rol
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ROLES.ROL)
                </dd>

                </dl>
